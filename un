<script setup>
import { ref, onMounted } from "vue";
import { candidaturesGetAll } from "@/services/candidatures.js";

// import { placeholderImg } from "@/services/candidatures.js";

import placeholderImg from "@/img/placeholder.png";

const getLogo = (candidature) => {
  return candidature.logo[0].signedUrl || placeholderImg;
};

const candidatures = ref([]);
const loading = ref(true);
const truncateDescription = (description, wordLimit) => {
  return description.split(" ").slice(0, wordLimit).join(" ") + "...";
};

async function loadData() {
  let data = await candidaturesGetAll();
  candidatures.value = data.list;
  loading.value = false;
}

onMounted(() => {
  loadData();
});
</script>

<template>
  <div class="title">
    <h3>Candidatures</h3>
    <span class="underline-h3"></span>
    <RouterLink to="/candidatures/add" class="add-button"
      >Ajouter une candidature</RouterLink
    >
  </div>

  <div v-if="loading" class="skeleton">
    <div class="skeleton-box"></div>
    <div class="skeleton-box"></div>
    <div class="skeleton-box"></div>
  </div>

  <RouterLink
    v-for="candidature in candidatures"
    :key="candidature.Id"
    :to="`/form-candidate/${candidature.Id}`"
    class="row-container"
  >
    <div class="logo">
      <img
        v-if="candidature.logo[0]"
        :src="candidature.logo[0].signedUrl"
        :alt="candidature.title"
      />
      <img v-else :src="placeholderImg" :alt="candidature.title" />
    </div>

    <div class="content">
      <div class="g-tl">
        <h3>{{ candidature.name }}</h3>
        <span class="underline"></span>
      </div>

      <p>{{ truncateDescription(candidature.description, 20) }}</p>

      <div>
        <p class="state" v-if="candidature.id_state === 1">
          En attente de réponse
        </p>
        <p class="state" v-else-if="candidature.id_state === 2">À envoyer</p>
        <p class="state" v-else-if="candidature.id_state === 3">Accepté</p>
        <p class="state" v-else-if="candidature.id_state === 34">Refusé</p>
        <p class="state" v-else-if="candidature.id_state === 67">Entretien</p>
      </div>
    </div>
  </RouterLink>
</template>

<style scoped>
